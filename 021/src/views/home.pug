doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
    link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
  body 
    header
      h1 🥳 Hello SocketIO Chat! 🥳
    main
      div#welcome
        form
          input(type="text", placeholder="채팅방 이름", required)
          button 들어가기
      div#room
        h2
        ul 
        form#message
          input(type="text", placeholder="메시지 입력", required)
          button 클릭!
        form#nickname
          input(type="text", placeholder="이름 저장", required)
          button 저장
    script(src="/socket.io/socket.io.js") 
    script(src="/public/js/app.js") 