doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title 소켓
    link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
  body 
    header
      h1 📸 카메라 📷
    main
      div#welcome
        form
          input#roomName(type="text", placeholder="채팅방 이름", required autocomplete='off')
          input#nickname(type="text", value="익명", required)
          button 들어가기
        h3 채팅방 목록
        ul
      div#call
        div#localStream
          video#localFace(
            autoplay,
            playsinline,
            with="900", 
            height="400"
          )
        div#remoteStream
          video#remoteFace(
            autoplay,
            playsinline,
            with="900", 
            height="400"
          )
        div
          button#mute 음소거
          button#camera 카메라 끄기
          button#reciveSound 전체 오디오 끄기
          select#cameraSelect
    script(src="/socket.io/socket.io.js") 
    script(src="/public/js/app.js") 