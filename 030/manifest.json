{
  "manifest_version": 3,
  "name": "Drag & Drop Drawer",
  "version": "0.0.1",
  "description": "Drag & Drop Drawer",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "identity"
  ],
  "host_permissions": [
    "https://*.googleapis.com/",
    "https://*.firebaseio.com/",
    "https://*.firebaseapp.com/"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
